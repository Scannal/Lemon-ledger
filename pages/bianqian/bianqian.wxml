<view>
<image class="background" src="https://ae01.alicdn.com/kf/H06459a8a74ac46aba6a069112ebc7264j.jpg" mode="aspectFill"></image>

  <view class="msg-box">

    <!--输入框-->
    <view class="send-box"> 
      <input class="input" type="text" placeholder="请添加便签..."  bindinput="changeInputVal" placeholder-class="place-input" value="{{inputVal}}"></input>
      <button size="mini" type="primary" bindtap="addMsg" style="background-color:#c0cbcd;opacity:0.8;color:#141b1b ">添加</button>
    </view>
    <!--无便签时-->
    <text class="msg-info" wx:if="{{msgData.length==0}}">暂无便签</text>
    <!--便签列表-->
    <view class="list-view" style="color:#242c2c">
      <view class="item"  wx:for="{{msgData}}" wx:key="bianqian">
        <text class="text1">{{item.msg}}</text>
        <icon bindtap="delMsg" class="close-btn" data-index="{{index}}" type="cancel"></icon>
        <view class="zhu-box">
       <button>主页</button>
        </view>
      </view>
    </view>
  </view>
</view>